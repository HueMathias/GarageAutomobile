@page
@model ConstellationGarage.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Category list";
}

<h1>Category list</h1>

<table class="table table-striped table-borderless">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Categories) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="db-buttons">
                <a asp-page="./Edit" asp-route-id="@item.Code"><i class="bi bi-pencil-square"></i></a>
                <a asp-page="./Details" asp-route-id="@item.Code"><i class="bi bi-book"></i></a>
                <a asp-page="./Delete" asp-route-id="@item.Code"><i class="bi bi-trash"></i></a>
            </td>
        </tr>
    }
    </tbody>
</table>

@{
    var prevDisabled = !Model.Categories.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Categories.HasNextPage ? "disabled" : "";
}

<a href="/Index" class="btn btn-secondary"><i class="bi bi-arrow-left-square"></i></a>
<a href="/Categories/Create" class="btn btn-success">Create +</a>

<div style="text-align:center;float:right;">
    <a asp-page="./Index" asp-route-pageIndex="@(Model.Categories.PageIndex - 1)" class="btn btn-primary btn-index @prevDisabled">
        <i class="bi bi-arrow-left"></i>&nbsp;Previous
    </a>
    <a asp-page="./Index" asp-route-pageIndex="@(Model.Categories.PageIndex + 1)" class="btn btn-primary btn-index @nextDisabled">
        Next&nbsp;<i class="bi bi-arrow-right"></i>
    </a>
</div>