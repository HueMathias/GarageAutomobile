@page
@model ConstellationGarage.Pages.Brands.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Brand[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Brand[0].Icon)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Brand) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>
                    @if (item.Icon != null)
                    {
                        <img width="100" height="100" src="data:image/jpeg;base64,@Convert.ToBase64String(item.Icon ?? new byte[0])" />
                    }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Code">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Code">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Code">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
