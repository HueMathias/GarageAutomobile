@page
@model ConstellationGarage.Pages.Brands.DetailsModel

@{
    ViewData["Title"] = "Brand details";
}

<h1>Brand details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Brand.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Brand.Name)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Brand.Icon)</dt>
        <dd class="col-sm-10">
            <img width="100" height="100" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Brand.Icon ?? new byte[0])" />
        </dd>
    </dl>
</div>

<div>
    <a href="Index" class="btn btn-secondary"><i class="bi bi-arrow-left-square"></i></a>
    <a asp-page="./Edit" asp-route-id="@Model.Brand?.Code" class="btn btn-primary"><i class="bi bi-pencil-square" style="color:white"></i></a>
</div>