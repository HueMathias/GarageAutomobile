@page
@model ConstellationGarage.Pages.Brands.DeleteModel

@{
    ViewData["Title"] = "Delete brand";
}

<h1>Are you sure you want to delete @Model.Brand.Code brand ?</h1>
<div>    
    <form method="post">
        <input type="hidden" asp-for="Brand.Code" />
        <a asp-page="./Index" class="btn btn-secondary"><i class="bi bi-arrow-left-square"></i></a>
        <input type="submit" value="Delete" class="btn btn-danger" /> 
    </form>
</div>
